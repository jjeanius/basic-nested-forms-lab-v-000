<h2> the recipe form </h2>
<%= form_for @recipe do |f| %>
  <%= f.label :recipe %>
  Title: <%= f.text_field :title %>
 <h2> adds ingredients </h2>
  <%= f.fields_for :ingredients do |ingredient_builder| %>
    <%= ingredient_builder.label :name_0 %>
    <%= ingredient_builder.text_field :quantity_0 %> <br>
    <%= ingredient_builder.label :name_1 %>
    <%= ingredient_builder.text_field :quantity_1 %> <br>
  <% end %>

    <%=f.submit "commit" %>
<% end %>
